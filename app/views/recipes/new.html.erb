<%= render 'form', recipe: @recipe %>

<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :ingredient_name %>
    <%= i.text_field :ingredient_name %><br>

    <%= i.label :ingredient_amount %>
    <%= i.text_field :ingredient_amount %><br>

    <%= i.label :ingredient_type %>
    <%= i.text_field :ingredient_type %><br>

  <% end %>

  <%= f.submit %>
<% end %>
